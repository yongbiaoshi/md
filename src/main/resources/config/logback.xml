<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="true">
    <!-- sends logs to logback-beagle -->
    <!-- <consolePlugin /> -->
    <property name="APP_Name" value="mb" />
    <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss" />
    <contextName>${APP_Name}</contextName>
    <property name="charset" value="UTF-8" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoder 默认配置为PatternLayoutEncoder -->
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%5level] --- %-40logger{36} : %msg%n</pattern>
            <charset>${charset}</charset>
        </encoder>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
        </encoder>
    </appender>

    <appender name="LOGSTASH_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdc>true</includeMdc>
            <includeCallerData>true</includeCallerData>
            <customFields>{"app_name": "${APP_Name}"}</customFields>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/home/shi/logs/${APP_Name}.logFile.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%5level] %6relative --- [%24thread] %-40logger{36} : %msg%n</pattern>
            <charset>${charset}</charset>
        </encoder>
    </appender>

    <logger name="com.example.demo.mb.dao.mapper" level="DEBUG"></logger>
    <logger name="com.example.demo" level="INFO"></logger>
    <root level="INFO">
        <appender-ref ref="LOGSTASH_CONSOLE" />
    </root>
</configuration>  
<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="true" xmlns="http://ch.qos.logback/xml/ns/logback"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://ch.qos.logback/xml/ns/logback /home/shi/XMLCatalog/logback.xsd">
    <!-- sends logs to logback-beagle -->
    <!-- <consolePlugin /> -->
    <property name="APP_Name" value="mb" />
    <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss" />
    <contextName>${APP_Name}</contextName>
    <property name="charset" value="UTF-8" />

    <conversionRule conversionWord="req" converterClass="com.example.demo.mb.log.RequestIdConverter" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoder 默认配置为PatternLayoutEncoder -->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%5level]-%req - [%-30thread] %-40logger{36} : %msg%n</pattern>
            <charset>${charset}</charset>
        </encoder>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp />
                <version />
                <message />
                <loggerName />
                <logLevel />
                <logLevelValue />
                <threadName />
                <pattern>
                    <pattern>
                        {
                        "req_id": "%req"
                        }
                    </pattern>
                </pattern>
                <callerData />
                <arguments />
                <stackTrace />
            </providers>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/home/shi/logs/${APP_Name}.logFile.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%5level]-%req %6relative --- [%24thread] %-40logger{36} : %msg%n</pattern>
            <charset>${charset}</charset>
        </encoder>
    </appender>

    <logger name="com.example.demo.mb.dao.mapper" level="DEBUG"></logger>
    <logger name="com.example.demo" level="INFO"></logger>
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>  